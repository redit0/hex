help = function()
    text = const.ni + "Usage:".yellow("u") + const.ni
    text = text + "clear".green + " Clears the screen and prints the banner and menu.".lightgray + const.nl

    print(text)
end function

clear = function(args = null)
    clear_screen
    print(func.getBanner)
    print(func.getMenu)
end function

tools.clear = {
    "name": "clear",
    "text": white("clear"),
    "sortOrder": 998,
    "exec": @clear,
    "help": @help,
    "data": {}
}