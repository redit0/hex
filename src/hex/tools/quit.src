help = function()
    text = const.ni + "Usage:".yellow("u") + const.ni
    text = text + "quit".green + " Clears the screen and exits the program.".lightgray + const.nl

    print(text)
end function

quit = function(args)
    print(const.ni + "Goodbye!!".cyan("b"))
    wait
    clear_screen
    exit()
end function

tools.quit = {
    "name": "quit",
    "text": "quit".red,
    "sortOrder": 999,
    "exec": @quit,
    "help": @help,
    "data": {}
}