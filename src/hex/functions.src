func.user = function(obj)
    if typeof(obj) == "shell" then
        comp = obj.host_computer
    else if typeof(obj) == "computer" then
        comp = obj
    else
        return error("Incorrect Object Type")
    end if

    if comp.File("/root").has_permission("w") then
        return "root"
    end if

    for user in comp.File("/home").get_folders
        uName = user.name

        if comp.File("/home/" + uName).has_permission("w") then
            return uName
        end if
    end for

    return "guest"
end function

func.shellMap = function(shell)
    map = {}

    map.shell = shell
    map.user = func.user(shell)
    map.pip = shell.host_computer.public_ip
    map.lip = shell.host_computer.local_ip
    map.skey = map.pip + ":" + map.lip + ":"

    if map.user == "root" then
        map.skey = map.skey + "!!!"
    else if map.user == "guest" then
        map.skey = map.skey + map.user
    else
        map.skey = map.skey + "zzz"
    end if

    return map
end function

target.print = function()
    if not target.hasIndex("ip") or not is_valid_ip(target.ip) then
        print(const.indent + error("There is currently no saved " + const.targettext + "."))
        return
    end if

    if not target.hasIndex("port") or typeof(target.port) != "number" or target.port < 0 or target.port > 65535 then target.port = 0

    t = const.indent + "The current " + const.targettext + " is: " + target.ip + ":" + target.port

    print(t.green)
end function

func.init = function()
    g.shells = []
    g.shells.push(func.shellMap(get_shell))

    g.current = {}
    g.current.context = "home"
    g.current.obj = g.shells[0].shell
    g.current.comp = g.current.obj.host_computer
    g.current.hostname = g.current.comp.get_name
    g.current.pip = g.current.comp.public_ip
    g.current.lip = g.current.comp.local_ip
    g.current.user = g.shells[0].user
    g.current.dir = current_path
end function