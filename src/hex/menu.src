
if not g.hasIndex("f") then g.f = {}

g.f.getMenu = function()
	menu = g.c.indent + "<size=22>Menu</size>".yellow("bu") + g.c.nl + g.c.ni

	items = []

	for index in g.t.indexes
		items.push({"name": g.t[index].name, "sort": g.t[index].sortOrder})
	end for

	items.sort("sort")

	count = 1

	for item in items
		menu = menu + g.t[item.name].text + char(9) + char(9)

		if count == 5 then
			menu = menu + g.c.ni
			count = 1
		else
			count = count + 1
		end if
	end for
	
	return menu
end function